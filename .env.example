# ==============================================
# Multi-Agent System Configuration
# ==============================================

# LLM Configuration
# ------------------
# Choose LLM provider: "ollama" or "openai"
LLM_PROVIDER=ollama

# Ollama Settings (if using Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# OpenAI Settings (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

# Agent Configuration
# -------------------
# Maximum number of concurrent agents
MAX_CONCURRENT_AGENTS=5

# Default timeout for agent operations (seconds)
AGENT_TIMEOUT=300

# Maximum retry attempts for failed tasks
MAX_RETRIES=3

# Message Bus Configuration
# --------------------------
# Message queue type: "memory" or "redis"
MESSAGE_QUEUE_TYPE=memory

# Redis Configuration (if using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Shared Memory Configuration
# ----------------------------
# Enable shared memory persistence
ENABLE_PERSISTENCE=false

# Path for persistence (if enabled)
PERSISTENCE_PATH=./data/shared_memory.json

# Workflow Configuration
# ----------------------
# Default workflow directory
WORKFLOWS_DIR=./workflows

# Workflow execution timeout (seconds)
WORKFLOW_TIMEOUT=1800

# Logging Configuration
# ---------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: "json" or "console"
LOG_FORMAT=console

# Log file path (leave empty for console only)
LOG_FILE=

# Enable colored logs
COLORED_LOGS=true

# Monitoring Configuration
# ------------------------
# Enable Prometheus metrics
ENABLE_METRICS=false

# Metrics port
METRICS_PORT=9090

# Web Tools Configuration
# -----------------------
# User agent for web scraping
USER_AGENT=Mozilla/5.0 (compatible; MultiAgentSystem/1.0)

# Request timeout for web requests (seconds)
WEB_REQUEST_TIMEOUT=30

# Maximum number of web sources per research
MAX_WEB_SOURCES=10

# Search Configuration
# --------------------
# Default search engine: "duckduckgo" or "google"
SEARCH_ENGINE=duckduckgo

# Google API key (if using Google)
GOOGLE_API_KEY=
GOOGLE_CSE_ID=

# Rate Limiting
# -------------
# Requests per minute for web scraping
RATE_LIMIT_RPM=60

# Delay between requests (seconds)
REQUEST_DELAY=1.0

# Development Settings
# --------------------
# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Test mode (uses mock data)
TEST_MODE=false
